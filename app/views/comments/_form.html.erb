<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <fieldset>
    <div class="field">
      <%= form.label :commenter %><br>
      <%= form.text_field :commenter %>
    </div>
    <div class="field">
      <%= form.label :body %><br>
      <%= form.text_area(:body) %>
    </div>
    <div>
      <%= form.submit %>
    </div>
  </fieldset>
<% end %>
