<% unless comment.archived? %>
  <div class="comment">
    <p> <strong>Commenter:</strong> <%= comment.commenter %> </p>
    <p> <strong>Comment: </strong> <%= comment.body %></p>
    <ul class="action-menu">
      <li>
        <%= link_to "Destroy Comment",
          [comment.article, comment],
          data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?" 
          }
        %>
  </div>
<% end %>
